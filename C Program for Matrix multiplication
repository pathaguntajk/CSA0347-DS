#include<stdio.h>
#include<conio.h>
int main()
{
int i,k,j,a[2][2],b[2][2],c[2][2]={0};
printf("enter the A matrix:");
for(i=0;i<2;i++)
	for(j=0;j<2;j++)
		scanf("%d",&a[i][j]);
printf("enter B matrix:");
for(i=0;i<2;i++)
	for(j=0;j<2;j++)
		scanf("%d",&b[i][j]);
printf("addition of two matrix:");
for(i=0;i<2;i++)
	for(j=0;j<2;j++)
	for(k=0;k<2;k++)
		c[i][j] =c[i][j]+a[i][k]*b[k][j];
printf("print the result");
for(i=0;i<2;i++)
	for(j=0;j<2;j++)
		printf("%d ",c[i][j]);
getch();
return 0;
}
